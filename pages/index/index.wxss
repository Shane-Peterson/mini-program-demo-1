.body {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 50%;
}

.circle {
    width: 10vw;
    height: 10vw;
    border: 1px solid gray;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 25%;
    margin-right: auto;
    margin-left: auto;
}

.numbers {
    display: flex;
    justify-content: center;
}

.numbers > .number {
    display: flex;
    align-items: center;
}

.result {
    display: flex;
    justify-content: center;
    height: 20px;
    padding-bottom: 25%
}
